<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chernyee.cssquare.AboutFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/bg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView

                    android:layout_marginTop="20dp"
                    android:src="@drawable/app_logo_crop"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="80dp" />

                <ImageView
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/title_logo_crop"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView

                    android:padding="10dp"
                    android:gravity="bottom|center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:text="About"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>




        </FrameLayout>

        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/aboutapp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="@string/aboutme"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableRight="@drawable/heart"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Show some love to your developer "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>







</ScrollView>


